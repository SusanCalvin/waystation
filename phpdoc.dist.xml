<?xml version="1.0" encoding="UTF-8" ?>

<!-- Per la configurazione vedi: http://www.phpdoc.org/docs/latest/references/configuration.html -->

<phpdocumentor>

  <parser>
    <default-package-name>WayStation</default-package-name>
    <target>doc</target>
    <encoding>utf-8</encoding>
  </parser>
  <transformer>
    <target>doc</target>
  </transformer>
  <files>
    <directory>modules</directory>
    <ignore>tests/*</ignore>
  </files>
  <logging>
    <level>verbose</level>
    <paths>
      <default>doc/log/{DATE}.log</default>
      <errors>doc/log/{DATE}.errors.log</errors>
    </paths>
  </logging>
  <transformations>
    <template name="responsive-twig"/>
  </transformations>
</phpdocumentor>
